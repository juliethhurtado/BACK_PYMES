        CursoOutDTO cursoOutDTO = new CursoOutDTO();

        cursoOutDTO.setIdCurso( curso.getIdCurso() );
        cursoOutDTO.setGrupo( curso.getGrupo() );
        cursoOutDTO.setCupo( curso.getCupo() );

