        persona.setSegundoApellido( docenteLaborDTO.getSegundoApellido() );
        persona.setEmail( docenteLaborDTO.getCorreo() );
        persona.setTipoIdentificacion( docenteLaborDTOToTipoIdentificacion( docenteLaborDTO ) );

