        ReservaTemporalInDTO reservaTemporalInDTO = new ReservaTemporalInDTO();

        reservaTemporalInDTO.setIdEspacioFisico( reservaTemporal.getIdEspacioFisico() );
        reservaTemporalInDTO.setFechaReserva( reservaTemporal.getFechaReserva() );
        reservaTemporalInDTO.setEstado( reservaTemporal.getEstado() );
        reservaTemporalInDTO.setObservaciones( reservaTemporal.getObservaciones() );
        reservaTemporalInDTO.setSalon( reservaTemporal.getSalon() );
        reservaTemporalInDTO.setIdUbicacion( reservaTemporal.getIdUbicacion() );
        reservaTemporalInDTO.setUsuario( reservaTemporal.getUsuario() );
        reservaTemporalInDTO.setCorreo( reservaTemporal.getCorreo() );
        reservaTemporalInDTO.setTipoIdentificacion( reservaTemporal.getTipoIdentificacion() );
        reservaTemporalInDTO.setTipoSolicitante( reservaTemporal.getTipoSolicitante() );
        if ( reservaTemporal.getHoraInicio() != null ) {
            reservaTemporalInDTO.setHoraInicio( LocalTime.parse( reservaTemporal.getHoraInicio() ) );
        }
        if ( reservaTemporal.getHoraFin() != null ) {
            reservaTemporalInDTO.setHoraFin( LocalTime.parse( reservaTemporal.getHoraFin() ) );
        }
        reservaTemporalInDTO.setObservacionesPrestamista( reservaTemporal.getObservacionesPrestamista() );
        reservaTemporalInDTO.setIdReserva( reservaTemporal.getIdReserva() );

        return reservaTemporalInDTO;
