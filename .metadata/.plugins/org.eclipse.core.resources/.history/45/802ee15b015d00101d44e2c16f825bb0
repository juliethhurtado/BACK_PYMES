        reservaTemporal.setIdUbicacion( inDTO.getIdUbicacion() );
        reservaTemporal.setUsuario( inDTO.getUsuario() );
        reservaTemporal.setCorreo( inDTO.getCorreo() );
        reservaTemporal.setTipoIdentificacion( inDTO.getTipoIdentificacion() );
        reservaTemporal.setTipoSolicitante( inDTO.getTipoSolicitante() );
        if ( inDTO.getHoraInicio() != null ) {
            reservaTemporal.setHoraInicio( DateTimeFormatter.ISO_LOCAL_TIME.format( inDTO.getHoraInicio() ) );
        }
        if ( inDTO.getHoraFin() != null ) {
            reservaTemporal.setHoraFin( DateTimeFormatter.ISO_LOCAL_TIME.format( inDTO.getHoraFin() ) );
        }
        reservaTemporal.setObservacionesPrestamista( inDTO.getObservacionesPrestamista() );

        return reservaTemporal;
